#include <stdio.h>
#include <math.h>
#include <string.h>

int Palindrom_detector (char* argument)
{
    size_t count = 1;
    while (argument[count] != "")
    {
        count++;
    }
    printf("%d", count);
    for (size_t i = 1; i<=count; count++)
    {
        if (argument[i] != argument [count-i])
        {
            return 0;
        }
    }
    return 1;
}

int main()
{
    char* x = 0;
    printf("Please insert a palindrom_tested number \n");
    scanf("%s", &x);
    if (Palindrom_detector(x))
    {
        printf("Your number is a Palindrom");
    }
    else {
        printf("Your number isn't a Palindrom");
    }
}
