#include <stdio.h>
#include <stdlib.h>
#include <math.h>

double binary_degree(double accuracy, double squared);


int main()
{
    double accuracy, squared;
    printf("Input degree and squared-number \n");
    scanf("%lf", &accuracy);
    scanf("%lf", &squared);
    accuracy = pow(10, accuracy);
    binary_degree(accuracy, squared);
    
}

double binary_degree(double accuracy, double squared)
{
    double left = 0, right = squared;
    double c = 0, mid = 0;
    //printf("%lf, %lf \n", left, right);
    while (left<=right)
    {
        mid = (left+right)/2;
        //printf("%lf", mid);
        if (((mid*mid)-squared) == 0)
        {
            printf("%lf \n", mid);
            return (mid);
        }
        if (mid*mid-squared<0)
        {
            left = left+accuracy;
        }
        if (mid*mid-squared>0)
        {
            right = right-accuracy;
        }
        if (abs(c)>abs(mid*mid-squared))
        {
            c = mid*mid-squared;
            //printf("%lf", c);
        }
    }
    printf("\n %lf", mid);
    return mid;
}
