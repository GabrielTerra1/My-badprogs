#include <stdio.h>
#include <stdlib.h>

double binary_degree(double accuracy, double squared);


int main()
{
    double accuracy, squared;
    printf("Input degree and squared-number");
    scanf("%lf, %lf", &accuracy, &squared);
    accuracy = pow(10, accuracy);
    binary_degree(accuracy, squared);
    printf("");
    
}

double binary_degree(double accuracy, double squared)
{
    double left = 0, right = squared;
    double c;
    while (left<=right)
    {
        double mid = (left+right)/2;
        if (mid-c<0)
        {
            left = left+accuracy;
        }
        if (mid-c>0)
        {
            right = right-accuracy;
        }
        if (abs((mid*mid)-squared)<abs((c*c-squared))
        {
            c = mid;
        }
        if (((mid*mid)-squared) == 0)
        {
            return c;
        }
    }
    return c;
}
